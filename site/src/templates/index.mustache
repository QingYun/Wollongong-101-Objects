<div id="index-page">
  <div class="pure-g">
    <div class="pure-u-1-1">
      <a href="./index.html" class="page-header navigate">
        <header >
          <span>History of Wollongong</span>
          <span>in 101 Objects</span>
        </header>
      </a>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1-1">
      <main class="index-box">
        <nav class="sort-control">
          <button class="by-theme">By Theme</button>
          <button class="by-index active">Show All</button>
        </nav>
        <article class="box theme hidden">
          {{#by_theme}}
            <section>
              <header>
                {{tag}}
              </header>
              <article class="objects"><!--
                {{#objects}}
              --><a href="{{{page_url}}}" class="navigate"><!--
                 --><div class="pure-u-1 pure-u-md-1-2
                                pure-u-lg-1-3 pure-u-xl-1-4">
                      <figure>
                        <img src="img/{{img_url}}" alt={{name}}
                             class="pure-img" />
                        <figcaption>{{name}}</figcaption>
                      </figure>
                    </div><!--
               --></a><!--
                {{/objects}}
           --></article>
            </section>
          {{/by_theme}}
        </article>
        <article class="box all"><!--
          {{#by_index}}
         --><div class="pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
              <a href="{{{url}}}" class="navigate">
                <div>{{index}}.{{name}}</div>
              </a>
            </div><!--
          {{/by_index}}
     --></article>
      </div>
    </main>
  </div>
</div>
